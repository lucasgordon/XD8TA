<h1>The chat!</h1>

<%= form_with(model: [@analytics_chat, @message], url: create_message_analytics_chat_path(@analytics_chat), local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :user_prompt, class: 'form-label' %>
    <%= form.text_field :user_prompt, class: 'form-control', placeholder: "Type your message here..." %>
  </div>
  <%= form.submit 'Send', class: 'btn btn-primary' %>
<% end %>

<div class="mt-4">
  <h3>Chat History</h3>
  <% @messages.each do |message| %>
    <div class="chat-message">
      <strong>You:</strong> <%= message.user_prompt %><br>
      <strong>Agent:</strong> <%= message.agent_response %>
    </div>
  <% end %>
</div>