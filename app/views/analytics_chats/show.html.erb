<!-- Chat Page Header -->
<h1 class="text-center my-4"><%= Analytic.titles[@analytic.title] %> Chat</h1>

<!-- Chat History -->
<div class="chat-history-container" style="padding-bottom: 100px;"> <!-- Extra padding to ensure space for the fixed input box -->
  <div class="chat-history p-3">
    <div class="d-flex justify-content-start mb-2 w-75">
      <div class="agent-message bg-secondary text-white p-2 rounded">
        <%= markdown(@analytic_body) %>
      </div>
    </div>

    <% @messages.each do |message| %>
      <div class="d-flex justify-content-end mb-2">
        <div class="user-message bg-primary text-white p-2 rounded mw-75">
          <%= message.user_prompt %>
        </div>
      </div>
      <div class="d-flex justify-content-start mb-2 w-75">
        <div class="agent-message bg-secondary text-white p-2 rounded">
          <%= message.agent_response %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- Message Input Form -->
<div class="chat-input-container fixed-bottom bg-light p-3">
  <%= form_with(model: [@analytics_chat, @message], url: create_message_analytics_chat_path(@analytics_chat), local: true, html: { class: "input-form" }) do |form| %>
    <div class="input-group">
      <%= form.text_field :user_prompt, class: 'form-control', placeholder: "Ask anything about @#{@username}'s analytics", aria_label: "Message input" %>
      <div class="input-group-append">
        <%= form.submit 'Send', class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>