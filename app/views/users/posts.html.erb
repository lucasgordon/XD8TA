<div class="container mt-4">
    <h1>Posts</h1>
    <table class="table table-striped" data-bs-theme="dark">
      <thead>
        <tr>
          <th scope="col">URL</th>
          <th scope="col">Post ID</th>
          <th scope="col">Text</th>
          <th scope="col">Retweet Count</th>
          <th scope="col">Reply Count</th>
          <th scope="col">Like Count</th>
          <th scope="col">Quote Count</th>
          <th scope="col">Bookmark Count</th>
          <th scope="col">Impression Count</th>
          <th scope="col">Engagements</th>
          <th scope="col">User Profile Clicks</th>
          <th scope="col">Post Created At</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><a href="<%= post.url %>" target="_blank">View Post</a></td>
            <td><%= post.post_id %></td>
            <td><%= post.text %></td>
            <td><%= post.retweet_count %></td>
            <td><%= post.reply_count %></td>
            <td><%= post.like_count %></td>
            <td><%= post.quote_count %></td>
            <td><%= post.bookmark_count %></td>
            <td><%= post.impression_count %></td>
            <td><%= post.engagements %></td>
            <td><%= post.user_profile_clicks %></td>
            <td><%= post.post_created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>