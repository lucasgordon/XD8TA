<div class="container mt-5">
  <div class="card bg-dark text-white">
    <div class="card-header bg-secondary">
      <h2 class="card-title text-center"><%= @user.name %></h2>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-4 text-center">
          <img src="<%= @user.profile_image_url %>" class="img-fluid rounded-circle mb-3" alt="Profile Image">
          <h3>@<%= @user.x_username %></h3>
          <p><%= @user.location %></p>
          <p><%= @user.description %></p>
        </div>
        <div class="col-md-8">
          <div class="row mb-3">
            <div class="col-md-6">
              <label>Email:</label>
              <p><%= @user.email %></p>
            </div>
            <div class="col-md-6">
              <label>Account Created:</label>
              <p><%= @user.x_account_created_at %></p>
            </div>
          </div>
          <div class="row mb-3">
            <div class="col-md-6">
              <label>Followers:</label>
              <p><%= @user.followers_count %></p>
            </div>
            <div class="col-md-6">
              <label>Following:</label>
              <p><%= @user.following_count %></p>
            </div>
          </div>
          <div class="row mb-3">
            <div class="col-md-6">
              <label>Tweets:</label>
              <p><%= @user.tweet_count %></p>
            </div>
            <div class="col-md-6">
              <label>Likes:</label>
              <p><%= @user.like_count %></p>
            </div>
          </div>
          <div class="row mb-3">
            <div class="col-md-6">
              <label>Listed:</label>
              <p><%= @user.listed_count %></p>
            </div>
            <div class="col-md-6">
              <label>Verified:</label>
              <p><%= @user.verified ? 'Yes' : 'No' %></p>
            </div>
          </div>
          <div class="row mb-3">
            <div class="col-md-6">
              <label>Protected:</label>
              <p><%= @user.protected ? 'Yes' : 'No' %></p>
            </div>
            <div class="col-md-6">
              <label>Pinned Tweet ID:</label>
              <p><%= @user.pinned_tweet_id %></p>
            </div>
          </div>
        </div>
      </div>
      <div class="text-center mt-4">
        <%= link_to 'Edit Profile', edit_user_path(@user), class: 'btn btn-primary' %>
        <%= link_to 'View X Posts', posts_user_path(@user), class: 'btn btn-info' %>
        <%= link_to 'Start Private Fetch Process', fetch_posts_private_metrics_user_path(@user), class: 'btn btn-success me-2', data: { confirm: 'Are you sure you want to start the fetch process?' } %>
          <%= link_to 'Start Public Fetch Process', fetch_posts_public_metrics_user_path(@user), class: 'btn btn-success me-2', data: { confirm: 'Are you sure you want to start the fetch process?' } %>
      </div>
    </div>
  </div>
</div>